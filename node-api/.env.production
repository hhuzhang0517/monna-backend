# 生产环境配置

# 环境标识
NODE_ENV=production

# HTTP/HTTPS设置
USE_HTTPS=true
PORT=3000
SERVER_HOST=api.monna.app

# SSL证书路径（生产环境）
# 这里使用的是示例路径，实际部署时应修改为正式证书路径
SSL_CERT_PATH=/etc/ssl/monna/certificate.crt
SSL_KEY_PATH=/etc/ssl/monna/private.key

# 数据库连接
MONGODB_URI=mongodb://mongo:27017/monna_prod
REDIS_URL=redis://redis:6379/0

# 日志级别
LOG_LEVEL=info

# API限流
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000
